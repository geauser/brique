{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "outDir": "dist",
    "jsx": "preserve",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "baseUrl": "lib",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["lib/**/*.ts", "lib/**/*.d.ts", "lib/**/*.vue"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
